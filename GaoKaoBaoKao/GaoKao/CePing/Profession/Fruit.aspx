                        case "Group12":
                            $(this).text("人际关系");
                            break;
                        case "Group13":
                            $(this).text("稳定性");
                            break;
                    }

                    $(this).parent().next().append($(this).text()+":"+$("." + g + "_fx").text());
                });
            });
